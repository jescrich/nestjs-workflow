    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "stripe": "^18.3.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
