    "@this/*": "*"
  },
  "keywords": [
    "nestjs",
    "workflow",
    "state-machine",
    "fsm",
    "finite-state-machine",
    "typescript",
    "event-driven",
    "kafka",
    "microservices",
    "process-automation",
    "business-process",
    "workflow-engine",
    "state-management",
    "transition",
    "nodejs"
